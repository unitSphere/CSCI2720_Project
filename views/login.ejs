<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" type="text/css" href="css/login.css">

  <meta charset="utf-8">
  <meta name="description" content="Final Project" />

  <title> Login </title>
  <script src="js/login.js"></script>
</head>
<body>
  <div class="row" style="padding: 15px;">
    <form action="/login" method="get" class="col-md-4 col-l-4 col-md-offset-4">
      <h2 style= "text-align: center;">Login Form</h2>
      <div class="imgcontainer">
        <img src="images/login_image.png" alt="Avatar" class="avatar" style="width: 20%;">
      </div>

      <div class="container" style="width: 50%">
        <label for="uname"><b>Username</b></label>
        <!-- <input type="text" placeholder="Enter Username" name="uname" required> -->

        <input type="text" required placeholder="Enter Username" name="uname"
                                maxlength="20"
                                minlength="4"
                                data-fv-string-length___message="The full name must be more than 4 and less than 20 characters" />

        <label for="psw"><b>Password</b></label>
        <!-- <input type="password" placeholder="Enter Password" name="psw" required> -->


        <input type="password" required placeholder="Enter Password" name="psw"
                                maxlength="20"
                                minlength="4"
                                data-fv-string-length___message="The Password must be more than 4 and less than 20 characters" />

        <button type="submit">Login</button>
      </div>
    </form>
    <form class="col-md-4 col-l-4 col-md-offset-4">
      <h2 style="text-align: center;">Don't Have an account?</h2>

      <h2 style="text-align: center;">Register!</h2>

      <div class="imgcontainer">
        <img src="images/login_image.png" alt="Avatar" class="avatar" style="width: 20%;">
      </div>
      <div class="container" style="width: 50%">
        <label for="uname"><b>Username</b></label>
        <!-- <input id="usr" type="text" placeholder="Enter Username" name="uname" required> -->

        <input id="usr"type="text" required placeholder="Enter Username" name="uname"
                                maxlength="20"
                                minlength="4"
                                data-fv-string-length___message="The full name must be more than 4 and less than 20 characters" />

        <label for="psw"><b>Password</b></label>
        <!-- <input id="pas" type="password" placeholder="Enter Password" name="psw" required> -->


        <input id="pas" type="password" required placeholder="Enter Password" name="psw"
                                maxlength="20"
                                minlength="4"
                                data-fv-string-length___message="The Password must be more than 4 and less than 20 characters" />

        <button type="button" id="reg">Register</button>
      </div>
    </form>
  </div>
</body>
</html>
